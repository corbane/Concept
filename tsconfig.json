{
    "include": [
        "Demo/index.ts"
    ],
    "compilerOptions": {
        "lib": [ "es2020", "dom" ],
        "jsx": "react",
        "jsxFactory": "xnode",
        //"moduleResolution": "node",
        "types": ["./globals"],

        "target"        : "es6",
        "module"        : "es6",
        "outDir"        : "Demo/out",
        "inlineSourceMap": true,
        "removeComments": false,
        "declaration"   : true,
        "declarationMap" : true,
        "declarationDir": "typings",

        "isolatedModules": true,

        "baseUrl": ".",
        "paths": {
            "@lib"       : [ "Lib/index" ],
            "@lib/*"     : [ "Lib/*" ],

            "@data"      : [ "Data/index" ],
            "@data/*"    : [ "Data/*" ],

            "@aspect"    : [ "Aspect/index" ],
            "@aspect/*"  : [ "Aspect/*" ],

            "@ui"        : [ "Ui/index" ],
            "@ui/*"      : [ "Ui/*" ],

            "@api"       : [ "Api/index" ],
            "@api/*"     : [ "Api/*" ],

            "@app"       : [ "Application/index" ],
            "@app/*"     : [ "Application/*" ],
        }
    }
}
